<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Magirator</display-name>
	<description>Keep track of your Magic decks.</description>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>magirator.control.LoginServlet</servlet-class>
  	</servlet>
  	<servlet>
    		<servlet-name>Magirator</servlet-name>
    		<servlet-class>magirator.control.MagiratorServlet</servlet-class>
  	</servlet>
  	<servlet>
    		<servlet-name>AddDeck</servlet-name>
    		<servlet-class>magirator.control.AddDeckServlet</servlet-class>
  	</servlet>
  	<servlet>
    		<servlet-name>GetDecks</servlet-name>
    		<servlet-class>magirator.control.GetDecksServlet</servlet-class>
  	</servlet>
	<servlet>
    		<servlet-name>GetDeck</servlet-name>
    		<servlet-class>magirator.control.GetDeckServlet</servlet-class>
  	</servlet>
  	<servlet>
    		<servlet-name>GetGamesServlet</servlet-name>
    		<servlet-class>magirator.control.GetGamesServlet</servlet-class>
  	</servlet>
  	<servlet>
    		<servlet-name>Signup</servlet-name>
    		<servlet-class>magirator.control.SignupServlet</servlet-class>
  	</servlet>
  	<servlet>
    		<servlet-name>GetOpponentsServlet</servlet-name>
    		<servlet-class>magirator.control.GetOpponentsServlet</servlet-class>
  	</servlet> 
  	<servlet>
    		<servlet-name>AddGame</servlet-name>
    		<servlet-class>magirator.control.AddGameServlet</servlet-class>
  	</servlet>
  	<servlet>
    		<servlet-name>GetGame</servlet-name>
    		<servlet-class>magirator.control.GetGameServlet</servlet-class>
  	</servlet>
  	
	<servlet-mapping>
    		<servlet-name>Login</servlet-name>
    		<url-pattern>/Login</url-pattern>
  	</servlet-mapping>
	<servlet-mapping>
    		<servlet-name>Magirator</servlet-name>
    		<url-pattern>/Magirator</url-pattern>
  	</servlet-mapping>
	<servlet-mapping>
    		<servlet-name>AddDeck</servlet-name>
    		<url-pattern>/AddDeck</url-pattern>
	</servlet-mapping>
  	<servlet-mapping>
    		<servlet-name>GetDecks</servlet-name>
    		<url-pattern>/GetDecks</url-pattern>
	</servlet-mapping>  	
  	<servlet-mapping>
    		<servlet-name>GetDeck</servlet-name>
    		<url-pattern>/GetDeck</url-pattern>
	</servlet-mapping> 	
  	<servlet-mapping>
    		<servlet-name>Signup</servlet-name>
    		<url-pattern>/Signup</url-pattern>
	</servlet-mapping>
  	<servlet-mapping>
    		<servlet-name>GetGamesServlet</servlet-name>
    		<url-pattern>/GetGames</url-pattern>
	</servlet-mapping>
  	<servlet-mapping>
    		<servlet-name>GetOpponentsServlet</servlet-name>
    		<url-pattern>/GetOpponents</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
    		<servlet-name>AddGame</servlet-name>
    		<url-pattern>/AddGame</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
    		<servlet-name>GetGame</servlet-name>
    		<url-pattern>/GetGame</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
    	<welcome-file>Welcome.jsp</welcome-file>
	</welcome-file-list>
	
	<resource-ref>
		<description>Please work</description>
		<res-ref-name>jdbc/MagiratorDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>


</web-app> 
